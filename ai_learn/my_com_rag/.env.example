# 智谱AI API配置
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# 向量数据库配置
VECTOR_DB_TYPE=chromadb  # chromadb or faiss
VECTOR_DB_PATH=./data/vector_db

# 文档存储配置
DOCUMENTS_PATH=./data/documents
UPLOAD_PATH=./data/uploads

# 服务配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# LangChain配置
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TEMPERATURE=0.7

# RAG优化配置
USE_QUERY_REWRITE=True  # 是否使用查询重写
USE_RERANKER=True  # 是否使用重排序
USE_HYBRID_SEARCH=True  # 是否使用混合检索
HYBRID_ALPHA=0.5  # 混合检索中向量检索的权重 (0-1)
RERANKER_MODEL=BAAI/bge-reranker-v2-m3  # 重排序模型名称

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=./logs
